<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_create_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gerar_notificacao"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="231dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/button_create_notification"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="94dp"
        android:id="@+id/etVal"
        android:hint="@string/tempo_em_segundos" />

    <Button
        android:text="@string/setar_alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etVal"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:id="@+id/btnSetAlarm" />
</RelativeLayout>